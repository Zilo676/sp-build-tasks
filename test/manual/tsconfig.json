{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [ "es2017", "dom" ],
    "rootDir": "src",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": [ "node", "sharepoint" ],
    "outDir": "tmp",
    "baseUrl": "src/"
  },
  "exclude": [
    "node_modules",
    "webpack.config.js",
    "gulpfile.js",
    "build",
    "dist",
    "tmp",
    "cache",
    "tools"
  ]
}